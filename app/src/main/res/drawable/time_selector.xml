<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/orange"/><!-- Selected background color -->
            <corners android:radius="20dp"/> <!-- Rounded corners -->
            <padding android:left="12dp" android:right="12dp" android:top="6dp" android:bottom="6dp"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Default transparent background -->
            <corners android:radius="20dp"/> <!-- Rounded corners for default state -->
            <stroke android:width="2dp" android:color="@color/white"/> <!-- Optional border -->
            <padding android:left="12dp" android:right="12dp" android:top="6dp" android:bottom="6dp"/>
        </shape>
    </item>

</selector>
